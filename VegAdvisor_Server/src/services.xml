<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">
	<!-- Paquete de Servicios que va a escanear -->
	<context:component-scan base-package="com.vegadvisor.server.services.impl" />
	<!-- IDs de los Beans que van a ser inyectados -->
	<bean id="UserServices" class="com.vegadvisor.server.services.impl.UserServices" />
	<bean id="BasicTablesServices" class="com.vegadvisor.server.services.impl.BasicTablesServices" />
	<bean id="ChatServices" class="com.vegadvisor.server.services.impl.ChatServices" />
	<bean id="EstablishmentServices"
		class="com.vegadvisor.server.services.impl.EstablishmentServices" />
	<bean id="EventServices" class="com.vegadvisor.server.services.impl.EventServices" />
	<bean id="ForumServices" class="com.vegadvisor.server.services.impl.ForumServices" />
	<bean id="ImageServices" class="com.vegadvisor.server.services.impl.ImageServices" />
	<bean id="OpinionServices" class="com.vegadvisor.server.services.impl.OpinionServices" />
</beans>